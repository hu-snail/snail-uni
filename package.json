{
  "name": "snail-uni",
  "version": "1.0.1",
  "description": "snail-ui - 最佳的uni-app开发模版",
  "main": "index.js",
  "scripts": {
    "postinstall": "simple-git-hooks",
    "lint": "npx oxlint && eslint --fix.",
    "create-ui": "snail-uni init",
    "changeset": "changeset init",
    "preversion": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release:nobuild": "changeset publish"
  },
  "keywords": [
    "snail-uni",
    "uni-app"
  ],
  "author": "hu-snail 1217437592@qq.com",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "docs",
    "play"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hu-snail/snail-uni.git"
  },
  "repository-gitee": {
    "type": "git",
    "url": "https://gitee.com/hu-snail/snail-uni.git"
  },
  "bugs": {
    "url": "https://github.com/hu-snail/snail-uni/issues"
  },
  "bin": {
    "snail-uni": "packages/snail-cli/bin/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "nano-staged": {
    "*.md": "prettier --write",
    "*.{ts,tsx,js,vue,scss}": "prettier --write",
    "*.{ts,tsx,js,vue}": "pnpm lint",
    "*.{css,scss,vue,html}": "stylelint --fix"
  },
  "engines": {
    "node": ">= 18.0.0",
    "pnpm": ">= 8.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged",
    "commit-msg": "npx node ./verify-commit.mjs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@snail-uni/cli": "workspace:*",
    "@snail-uni/eslint-config": "workspace:*",
    "@snail-uni/stylelint-config": "workspace:*",
    "eslint": "8.43.0",
    "gulp": "^5.0.0",
    "nano-staged": "^0.8.0",
    "oxlint": "^0.6.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.8.1",
    "tsx": "^4.16.2"
  },
  "dependencies": {
    "typescript": "^5.5.3"
  }
}
